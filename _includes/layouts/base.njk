<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }} | Bargsteen</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <!-- <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet"> -->
    <link href="{{ '/css/style.css' | url }}" rel="stylesheet">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <div class="bg-white dark:bg-gray-800">
    <header class="flex flex-col md:flex-row p-6 bg-red-400 border-b-8 border-red-700 justify-between">
      <div class="w-64 my-auto">
        <h1 class="text-5xl font-sans font-bold subpixel-antialiased dark:text-white hover:text-white my-auto transition duration-100 ease-out"><a href="{{ '/' | url }}">Bargsteen</a></h1>
      </div>
      <nav class="flex flex-col md:flex-row justify-end">
        <h1 class="underline hover:text-white subpixel-antialiased mx-4 my-auto text-xl font-semibold transition duration-100 ease-out"><a href="{{ '/' | url }}">Home</a></h1>
        <h1 class="underline hover:text-white subpixel-antialiased mx-4 my-auto text-xl font-semibold transition duration-100 ease-out"><a href="{{ '/about' | url }}">About</a></h1>
        <button onclick="toggleDarkMode()">ðŸŒ—</button>
      </nav>
    </header>

    <main {%if templateClass %} class="{{ templateClass }}" {%endif%}>
      <div class="pt-8 max-w-xl mx-auto markdown">
        {{ content | safe }}
      </div>
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
  <script>
    function toggleDarkMode() {
      var element = document.body;
      element.classList.toggle("dark");
    }
  </script>
</html>
